<!DOCTYPE html>
<html>
  <head>
    <title>Dokoact</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarEexample1">
          <h3><%= link_to "Dokoact", root_path %></h3>
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li class="">
                <%= link_to 'マイページ', user_path(current_user.id), class:"btn btn-light" %>
              </li>
              <li class="">
                <%= link_to '物件検索', search_properties_path, class:"btn btn-light" %>
              </li>
              <li class="">
                <%= link_to 'ブックマーク', favorites_path, class:"btn btn-light" %>
              </li>
              <li class="">
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"btn btn-light" %>
              </li>
            </ul>
              <h4 class="navbar-text">ようこそ <%= "#{current_user.name}" %> さん。</h4>         
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li class="">
                <%= link_to 'About', abouts_path, class:"btn btn-light" %>
              </li>
              <li class="">
                <%= link_to '物件検索', search_properties_path, class:"btn btn-light" %>
              </li>
              <li class="">
                <%= link_to '新規登録', new_user_registration_path, class:"btn btn-light" %>
              </li>
              <li class="">
                <%= link_to 'ログイン', new_user_session_path, class:"btn btn-light" %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>   
  <footer class="footer"></footer>
  </body>
</html>
