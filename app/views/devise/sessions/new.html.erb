<div class="comtainer">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 ">
      <div class="text-center">
        <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :名前 %><br/>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "session" %>
          </div>
          <div class="field">
            <%= f.label :パスワード %><br/>
            <%= f.password_field :password, autocomplete: "current-password", class: "session" %>
          </div>
          <div class="field">
            <% if devise_mapping.rememberable? %>            
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            <% end %>
          </div>
          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
