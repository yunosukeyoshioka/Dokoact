<div class="container">
  <h2 class="text-center">ブックマーク一覧</h2>
  <div class="row">
    <div class="col-sm-12">  
     <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <table class="table-bordered table-condensed">  
          <tr>
            <th>お気に入り登録した物件</th>
          </tr>
          <% @favorites.each do |favorite| %>
            <tr>
            	<td>
                <%= link_to property_path(favorite.id) do %>
                  <%= favorite.property.property_name %>    
                <% end %>
              </td>
              <td>    
                <%= link_to "削除", favorite_path(favorite.id),class: "btn btn-danger", method: :delete %>  
              </td>  
            </tr> 
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
