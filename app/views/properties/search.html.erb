
<h2>条件検索</h2>

<table>
	<%= search_form_for @q do |f| %>
		<tr>
		  <td><%= f.label :roperty_name, "名称" %></td>
		  <td><%= f.search_field :property_name %></td>
		</tr>
		<tr> 
		  <td><%= f.label :genre_id, "種別" %></td>
		  <td><%= f.select :genre_id, options_for_select([["劇場"],["練習場"]]) %></td>
		</tr>
		<tr> 
		  <td><%= f.label :prefecture, "都道府県" %></td>
		  <td><%= f.search_field :prefecture %></td>
		</tr>
		<tr> 
		  <td><%= f.label :direction, "向き" %></td>
		  <td><%= f.select :genre_id, options_for_select([["東"],["西"],["南"],["北"],["問わない"]]) %></td>
		</tr>
		<tr> 
		  <td><%= f.label :area, "専有面積" %></td>
		  <td><%= f.select :area, options_for_select([["~20㎡"],["南"],["北"],["問わない"]]) %></td>
		</tr>
		<tr> 
		  <td><%= f.label :floor, "階" %></td>
		  <td><%= f.search_field :floor %></td>
		</tr>
		<tr> 
		  <td><%= f.label :structure, "構造" %></td>
		  <td><%= f.search_field :structure %></td>
		</tr>
		<tr> 
		  <td><%= f.label :parking, "駐車場" %></td>
		  <td><%= f.search_field :genre_id %></td>
		</tr>
		<tr> 
		  <td><%= f.label :etc, "その他条件" %></td>
		  <td><%= f.search_field :etc %></td>
		</tr>
		
		<tr>
		  <td><%= f.submit "検索" %></td>
		</tr>
	<% end %>
</table>