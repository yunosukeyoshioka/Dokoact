<div class="container">
  <h2>物件一覧</h2>
  <div class="row">
    <% @properties.each do |property| %>
      <table> 
        <div class="col-xs-12 property">       
          <h3>
            <%= link_to property_path(property.id) do %>
              <%= property.property_name %>
            <% end %>
          </h3>
          <p><%= image_tag property.img.to_s %></p>           
          <tr>
            <th>物件名</th>
            <th>物件種別</th>
            <th>利用料(1日あたり)</th>
            <th>面積</th>
          </tr>
          <tr>
            <td><%= property.prefecture.name %></td> 
            <td><%= property.genre.genre %></td>
            <td>¥<%= property.price %></td>
            <td><%= property.area.width %></td>
          </tr>
          <tr>
            <td><%= link_to "詳細はこちら", property_path(property.id) %></td>
          </tr>
        </div>
      </table>
    <% end %> 
  </div>
</div>

       