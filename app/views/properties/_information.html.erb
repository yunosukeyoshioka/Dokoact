<!--物件詳細情報表示部分-->
<table border="1" class="property_box col-sm-8 col-sm-offset-2">
  <tr>
    <th class="text-center", width="40%">1日あたりの使用料</th>
    <td height="50", class="text-center price"><h4>¥<%= @property.price %></h4></td>
  </tr>
  <tr>
    <th class="text-center">投稿者</th>
    <td height="50", class="text-center"><%= @property.user.name %></td>
  </tr>
  <tr>
    <th class="text-center">住所</th>
    <td height="50", class="text-center"><%= @property.prefecture.name %></td>
  </tr>
  <tr>
    <th class="text-center">物件種別</th>
    <td height="50", align="center"><%= @property.genre.genre %></td>
  </tr>
  <tr>
    <th class="text-center">面積</th>
    <td height="50", align="center"><%= @property.area.width %></td>
  </tr>
  <tr>
    <th class="text-center">その他</th>
    <td height="100"><%= @property.intruduction %></td>
  </tr>
</table>