<!--DM画面-->
  <h2 class="title">DM</h2>
  <div class="container">
    <div class="chat-area">
      <div class="content">
        <% @room_users.each do |r| %>
          <strong><%= r.user.name %>さん</strong>
        <% end %>
      </div>
      <!--会話の一覧-->
      <%= render 'messages/messages' %>
    </div>
    <!--DMの送信フォーム-->
    <%= render 'messages/messages_send' %>
  </div>

