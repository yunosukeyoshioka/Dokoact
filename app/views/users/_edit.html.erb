<!--ユーザー情報編集部分-->
<div class='row'>
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_with(model: @user, url:user_path(@user), local: true, method: :patch) do |f| %>
      <div class='row'>
        <div class='col-sm-5'>
          <%= f.label :名前,class: 'form' %>
        </div>
        <div class='col-sm-4'>
           <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class='row'>
        <div class='col-sm-5'>
          <%= f.label :Eメール, class: 'form' %>
        </div>

        <div class='col-sm-4'>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class='row'>
        <div class='col-sm-5'>
          <%= f.label :郵便番号（ハイフンなし）, class: 'form' %>
        </div>
        <div class='col-sm-4'>
          <%= f.text_field :postcode, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-sm-5'>
          <%= f.label :住所, class: 'form'%>
        </div>
        <div class='col-sm-4'>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class='row'>
        <div class='col-sm-5'>
          <%= f.label :電話番号（ハイフンなし）,class: 'form' %>
        </div>
        <div class='col-sm-4'>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
      </div>

      <div class='row'>
        <div class="col-sm-6">
          <%= f.submit '編集内容を保存する', class: 'search btn btn-success' %>
        </div>
        <div class="col-sm-6">
          <%= link_to '退会する', unscribe_users_path, class: 'search glyphicon glyphicon-remove btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>