<script src="https://kit.fontawesome.com/da6e295665.js" crossorigin="anonymous"></script>
<div class="row">
  <div class="col-xs-10">
    <h2>登録情報編集</h2>
  </div>
</div>

<div class='row'>
  <div class="col-xs-10 col-xs-offset-1">
    <%= form_with(model: @user, url:user_path(@user), local: true, method: :patch) do |f| %>
      <div class='form-group row'>
        <div class='col-xs-2'>
          <h4><%= f.label :名前 %></h4>
        </div>
        <div class='col-xs-8 col-xs-offset-1'>
          <span style='display: inline-block;'>
            <%= f.text_field :name, class: 'form-control' %>
          </span>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-xs-2'>
          <h4><%= f.label :Eメール %></h4>
        </div>
        <div class='col-xs-4 col-xs-offset-1'>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-xs-3'>
          <h4><%= f.label :郵便番号（ハイフンなし） %></h4>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :postcode, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-xs-3'>
          <h4><%= f.label :住所 %></h4>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-xs-3'>
          <h4><%= f.label :電話番号（ハイフンなし） %></h4>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
      </div>

      <div class="action space-sm row">
        <div class="col-lg-2 offset-lg-8">
          <%= f.submit '編集内容を保存する', class:'btn btn-success' %>
        </div>
        <div class="col-lg-2">
          <%= link_to '退会する', unscribe_users_path, class: 'glyphicon glyphicon-remove btn btn-danger'  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
